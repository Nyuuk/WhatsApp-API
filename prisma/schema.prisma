generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../database/data.db"
}

model Message {
  id           Int     @id @default(autoincrement())
  id_msg       String
  msg_json     String
  remote_jid   String
  from_me      Boolean
  push_name    String
  message_text String
  is_group     Boolean
  is_read      Boolean @default(false)
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}

model QueueMessages {
  id            Int       @id @default(autoincrement())
  number        String
  text          String
  last_response String?
  status        Boolean   @default(false)
  count_retry   Int       @default(0)
  max_retry     Int       @default(3)
  created_at    DateTime  @default(now())
  updated_at    DateTime?
  is_deleted    DateTime?
}

model ScheduledMessages {
  id            Int       @id @default(autoincrement())
  number        String
  text          String
  last_response String?
  status        Boolean   @default(false)
  count_retry   Int       @default(0)
  max_retry     Int       @default(3)
  send_at       DateTime
  created_at    DateTime  @default(now())
  updated_at    DateTime?
  is_deleted    DateTime?
}

model AutoReplyMessage {
  id      Int                  @id @default(autoincrement())
  type_id Int
  prefix  String
  option  String
  description String?
  type    TypeAutoReplyMessage @relation("AutoReplyMessage", fields: [type_id], references: [id])
}

model TypeAutoReplyMessage {
  id                 Int                @id @default(autoincrement())
  name               String
  description        String
  prefix_wildcard    Boolean
  option_as          String // as string, function
  auto_reply_message AutoReplyMessage[] @relation("AutoReplyMessage")
}
